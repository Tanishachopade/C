struct EmployeeInfo{
char name[50];
int empId;
int contact_no;
int salary;
};
#include <stdio.h> 
#include<string.h> 
int main(){ 
int a; 
int n; 
int salary; 
int c=0; 
int r=0; 
int z; 
struct EmployeeInfo e[10]; 

for(int i=0 ; i<10 ; i++)
{
printf("Enter Employee name :" ); 
scanf("%s" , e[i].name); 
printf("Enter Employee Id :"); 
scanf("%d" , &e[i].empId); 
printf("Enter Contact number :"); 
scanf("%d" , &e[i].contact_no);
printf("Enter Salary :"); 
scanf("%d" , &e[i].salary); } 
printf("CHoose one option :) \n"); 
printf("1.Display entire data \n"); 
printf("2.Finding employee name with his/her employee ID \n"); 
printf("3.Comparing salary \n"); 
printf("4.Updating contact details\n"); 
scanf("%d" , &n); 

switch(n)
{ 
case 1 : printf("Displaying entire data"); 
for(int i=0 ; i<10 ; i++)
{ 
printf("The Employee Name is :%s\n", e[i].name); 
printf("The Employee ID is :%d\n" , e[i].empId); 
printf("The Contact number of Employee is :%d\n" , e[i].contact_no ); 
printf("The salary of the employee is :%d\n" , e[i].salary); 
} 
break; 
case 2: printf("Enter Employee ID :");
scanf("%d" , &a); 
int found ; 
char n[50]; 
for(int i=0 ; i<10; i++) 
{ 
if(a==e[i].empId) 
{ 
found=1; 
strcpy(n,e[i].name); 
} 
} 
if(found==1)
{ 
printf("%s" , n ); 
} 
else{ printf("NOT FOUND"); 
} 
break ; 
case 3 : printf("Enter salary value :"); 
scanf("%d" ,&salary ); 
for(int i=0 ; i<10 ; i++) 
{ 
if(salary<e[i].salary) 
{ 
printf("%s\t" , e[i].name ); 
} 
} 
break;

case 4: printf("Enter employee ID :\n"); 
scanf("%d" , &z); 
printf("Enter your correct contact number :\n"); 
scanf("%d" , &c); 
for(int i=0 ; i<10; i++)
{
if(z==e[i].empId){ c=e[i].contact_no ;
}
} 
printf("Your contact has been successfully updated :)"); 
break; 
default: printf("Choose correct option :)"); 
} 
return 0; 
}
