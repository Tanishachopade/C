#include <stdio.h> 
#include <string.h> 
int main()
{ 
char sn[100]; 
int l=0,V=0 ; 
printf("Enter the sentence :"); 
fgets(sn , sizeof(sn) ,stdin); 
for(int i=0 ; sn[i]!='\0' ; i++ ) 
{ 
l=l+1; 
if(sn[i]=='a' || sn[i]=='e' || sn[i]=='i' || sn[i]=='o' || sn[i]=='u') 
{ 
V=V+1; 
} 
} 
printf("Length of the string is : %d\n" , l-1); 
printf("Number of vowels in the sentence :%d\n" , V); 
return 0; 
}
